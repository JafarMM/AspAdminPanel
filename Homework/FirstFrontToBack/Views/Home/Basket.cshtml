@using FirstFrontToBack.Models;
@using FirstFrontToBack.ViewModels;


@{
    ViewData["Title"] = "Basket";
    List<BasketViewModel> basketViewModels = Model;


}

@if (basketViewModels == null)
{
    <h1>Sebet Boshdur!</h1>
}
else
{
    <table class="table table-dark">
        <thead>
            <tr>

                <th scope="col">Product Name</th>
                <th scope="col">Product Price</th>
                <th scope="col">Product Count</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in basketViewModels)
            {
                <tr>

                    <td>@item.Name <a asp-controller="Home" asp-action="RemoveFromCart" asp-route-id="@item.Id" class="btn btn-danger">Delete</a></td>
                    <td>@item.Price</td>
                    <td>@item.Count</td>
                </tr>
            }

        </tbody>
    </table>
}

