@model List<Experts>

@foreach (Experts item in Model)
{
    <div class="col-md-6 col-lg-3">
        <div class="item text-center">
            <div class="img">
              <a asp-controller="Experts" asp-action="Detail" asp-route-id="@item.Id"><img src="~/img/@item.Image" class="img-fluid rounded-circle" alt=""></a>   
                 
            </div>
            <div class="text mt-3">
                <h6>@item.Name</h6>
                <p class="text-black-50">@item.position</p>
            </div>
        </div>
    </div>
}